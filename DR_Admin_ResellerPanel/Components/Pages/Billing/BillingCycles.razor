@page "/billing/cycles"

<div id="billing-cycles-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-arrow-repeat"></i> Billing Cycles</h2>
            <p class="text-muted mb-0">Manage billing cycle definitions used for recurring services.</p>
        </div>
        <button class="btn btn-primary" id="billing-cycles-create" type="button">
            <i class="bi bi-plus-circle"></i> New Billing Cycle
        </button>
    </div>

    <div id="billing-cycles-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="billing-cycles-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-list-check"></i> Billing Cycles</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Duration (days)</th>
                            <th>Sort</th>
                            <th>Description</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="billing-cycles-table-body">
                        <tr>
                            <td colspan="7" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="billing-cycles-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="billing-cycles-modal-title">New Billing Cycle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="billing-cycles-form" novalidate>
                    <div class="mb-3">
                        <label for="billing-cycles-code" class="form-label">Code <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="billing-cycles-code" placeholder="e.g. monthly">
                    </div>
                    <div class="mb-3">
                        <label for="billing-cycles-name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="billing-cycles-name" placeholder="e.g. Monthly">
                    </div>
                    <div class="row g-3">
                        <div class="col-6">
                            <label for="billing-cycles-duration" class="form-label">Duration in days <span class="text-danger">*</span></label>
                            <input type="number" min="1" class="form-control" id="billing-cycles-duration" placeholder="30">
                        </div>
                        <div class="col-6">
                            <label for="billing-cycles-sort-order" class="form-label">Sort order <span class="text-danger">*</span></label>
                            <input type="number" min="0" class="form-control" id="billing-cycles-sort-order" placeholder="10">
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="billing-cycles-description" class="form-label">Description</label>
                        <textarea class="form-control" id="billing-cycles-description" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="billing-cycles-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="billing-cycles-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete billing cycle <strong id="billing-cycles-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="billing-cycles-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
