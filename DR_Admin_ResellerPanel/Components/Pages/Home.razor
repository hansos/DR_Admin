@page "/"

<div id="dashboard-summary-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-speedometer2"></i> Dashboard Summary</h2>
            <p class="text-muted mb-0">Overview of key account signals.</p>
        </div>
    </div>

    <div id="dashboard-summary-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div id="dashboard-summary-workflow-card" class="card shadow-sm mb-3 d-none">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-diagram-3-fill"></i> Ongoing Sales Workflow</h5>
        </div>
        <div class="card-body">
            <p class="mb-2 text-muted small">A sale workflow is currently in progress.</p>
            <div class="small mb-3">
                <div><span class="fw-semibold">Domain:</span> <span id="dashboard-summary-workflow-domain">-</span></div>
                <div><span class="fw-semibold">Customer:</span> <span id="dashboard-summary-workflow-customer">-</span></div>
            </div>
            <a id="dashboard-summary-workflow-link" class="btn btn-outline-primary btn-sm" href="/dashboard/new-sale/customer">
                Continue Sales Workflow
            </a>
        </div>
    </div>

    <div id="dashboard-summary-pending-card" class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Pending DNS Sync</h5>
        </div>
        <div class="card-body">
            <div id="dashboard-summary-pending-panel" class="alert alert-warning mb-0" role="alert">
                <div class="fw-semibold mb-2">Registrar sync required</div>
                <div class="text-muted small mb-3" id="dashboard-summary-pending-note">Loading pending DNS records...</div>
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Domain</th>
                                <th class="text-end">Pending Records</th>
                            </tr>
                        </thead>
                        <tbody id="dashboard-summary-pending-table"></tbody>
                    </table>
                </div>
                <div class="mt-3 d-none" id="dashboard-summary-pending-loading">
                    <div class="spinner-border spinner-border-sm text-warning" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="ms-2 text-muted small">Loading pending DNS records...</span>
                </div>
            </div>
        </div>
    </div>

    <div id="dashboard-summary-all-clear-card" class="card shadow-sm d-none">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-check-circle-fill"></i> Everything fine</h5>
        </div>
        <div class="card-body">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-check-circle-fill text-success"></i>
                <span class="fw-semibold">No warnings are currently present.</span>
            </div>
        </div>
    </div>
</div>
