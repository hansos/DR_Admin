@page "/infrastructure/hosting-packages"

<div id="hosting-packages-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-box-seam"></i> Hosting Plans</h2>
            <p class="text-muted mb-0">Manage hosting package plans and limits.</p>
        </div>
        <button class="btn btn-primary" id="hosting-packages-create" type="button">
            <i class="bi bi-plus-circle"></i> New Hosting Plan
        </button>
    </div>

    <div id="hosting-packages-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="hosting-packages-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-list-check"></i> Hosting Plans</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Resources</th>
                            <th>Features</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="hosting-packages-table-body">
                        <tr>
                            <td colspan="7" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="hosting-packages-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="hosting-packages-modal-title">New Hosting Plan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="hosting-packages-form" novalidate>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label for="hosting-packages-name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="hosting-packages-name" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="hosting-packages-description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="hosting-packages-description" />
                        </div>

                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-disk-space" class="form-label">Disk (MB)</label>
                            <input type="number" min="0" class="form-control" id="hosting-packages-disk-space" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-bandwidth" class="form-label">Bandwidth (MB)</label>
                            <input type="number" min="0" class="form-control" id="hosting-packages-bandwidth" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-email-accounts" class="form-label">Email Accounts</label>
                            <input type="number" min="0" class="form-control" id="hosting-packages-email-accounts" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-databases" class="form-label">Databases</label>
                            <input type="number" min="0" class="form-control" id="hosting-packages-databases" />
                        </div>

                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-domains" class="form-label">Domains</label>
                            <input type="number" min="0" class="form-control" id="hosting-packages-domains" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-subdomains" class="form-label">Subdomains</label>
                            <input type="number" min="0" class="form-control" id="hosting-packages-subdomains" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-ftp-accounts" class="form-label">FTP Accounts</label>
                            <input type="number" min="0" class="form-control" id="hosting-packages-ftp-accounts" />
                        </div>

                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-monthly-price" class="form-label">Monthly Price</label>
                            <input type="number" min="0" step="0.01" class="form-control" id="hosting-packages-monthly-price" />
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="hosting-packages-yearly-price" class="form-label">Yearly Price</label>
                            <input type="number" min="0" step="0.01" class="form-control" id="hosting-packages-yearly-price" />
                        </div>

                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="hosting-packages-ssl-support" />
                                    <label class="form-check-label" for="hosting-packages-ssl-support">SSL Support</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="hosting-packages-backup-support" />
                                    <label class="form-check-label" for="hosting-packages-backup-support">Backup Support</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="hosting-packages-dedicated-ip" />
                                    <label class="form-check-label" for="hosting-packages-dedicated-ip">Dedicated IP</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="hosting-packages-is-active" checked />
                                    <label class="form-check-label" for="hosting-packages-is-active">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="hosting-packages-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="hosting-packages-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete hosting plan <strong id="hosting-packages-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="hosting-packages-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
