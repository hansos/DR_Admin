@page "/infrastructure/ip-addresses"

<div id="server-ip-addresses-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-hdd-network-fill"></i> IP Addresses</h2>
            <p class="text-muted mb-0">Manage server IP address assignments and allocations</p>
        </div>
        <button class="btn btn-primary" id="server-ip-addresses-create" type="button">
            <i class="bi bi-plus-circle"></i> New IP Address
        </button>
    </div>

    <div id="server-ip-addresses-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="server-ip-addresses-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-hdd-network-fill"></i> IP Addresses</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>IP Address</th>
                            <th>Version</th>
                            <th>Server</th>
                            <th>Primary</th>
                            <th>Status</th>
                            <th>Assigned To</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="server-ip-addresses-table-body">
                        <tr>
                            <td colspan="8" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="server-ip-addresses-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="server-ip-addresses-modal-title">New IP Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="server-ip-addresses-form" novalidate>
                    <div class="mb-3">
                        <label for="server-ip-addresses-ip-address" class="form-label">IP Address <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="server-ip-addresses-ip-address" placeholder="e.g. 192.168.1.100 or 2001:db8::1">
                    </div>
                    <div class="mb-3">
                        <label for="server-ip-addresses-ip-version" class="form-label">IP Version <span class="text-danger">*</span></label>
                        <select class="form-select" id="server-ip-addresses-ip-version">
                            <option value="">Select IP Version...</option>
                            <option value="IPv4">IPv4</option>
                            <option value="IPv6">IPv6</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="server-ip-addresses-server-id" class="form-label">Server <span class="text-danger">*</span></label>
                        <select class="form-select" id="server-ip-addresses-server-id">
                            <option value="">Select Server...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="server-ip-addresses-status" class="form-label">Status <span class="text-danger">*</span></label>
                        <select class="form-select" id="server-ip-addresses-status">
                            <option value="Active">Active</option>
                            <option value="Reserved">Reserved</option>
                            <option value="Blocked">Blocked</option>
                        </select>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="server-ip-addresses-is-primary">
                        <label class="form-check-label" for="server-ip-addresses-is-primary">Primary IP Address</label>
                    </div>
                    <div class="mb-3">
                        <label for="server-ip-addresses-assigned-to" class="form-label">Assigned To</label>
                        <input type="text" class="form-control" id="server-ip-addresses-assigned-to" placeholder="e.g. example.com or Web Service">
                    </div>
                    <div class="mb-3">
                        <label for="server-ip-addresses-notes" class="form-label">Notes</label>
                        <textarea class="form-control" id="server-ip-addresses-notes" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="server-ip-addresses-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="server-ip-addresses-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete IP address <strong id="server-ip-addresses-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="server-ip-addresses-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/js/server-ip-addresses.js"></script>
