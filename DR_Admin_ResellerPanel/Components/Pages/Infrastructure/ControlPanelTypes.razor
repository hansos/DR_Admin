@page "/infrastructure/control-panel-types"

<div id="control-panel-types-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-window-stack"></i> Hosting Panels</h2>
            <p class="text-muted mb-0">Manage hosting panel definitions (Plesk, cPanel, DirectAdmin, etc.)</p>
        </div>
        <button class="btn btn-primary" id="control-panel-types-create" type="button">
            <i class="bi bi-plus-circle"></i> New Hosting Panel
        </button>
    </div>

    <div id="control-panel-types-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="control-panel-types-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-window"></i> Hosting Panels</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Display Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="control-panel-types-table-body">
                        <tr>
                            <td colspan="6" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="control-panel-types-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="control-panel-types-modal-title">New Hosting Panel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="control-panel-types-form" novalidate>
                    <div class="mb-3">
                        <label for="control-panel-types-name" class="form-label">Internal Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="control-panel-types-name" placeholder="e.g. plesk, cpanel, directadmin">
                        <div class="form-text">Lowercase identifier used internally.</div>
                    </div>
                    <div class="mb-3">
                        <label for="control-panel-types-display-name" class="form-label">Display Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="control-panel-types-display-name" placeholder="e.g. Plesk, cPanel, DirectAdmin">
                    </div>
                    <div class="mb-3">
                        <label for="control-panel-types-description" class="form-label">Description</label>
                        <textarea class="form-control" id="control-panel-types-description" rows="2"></textarea>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="control-panel-types-is-active" checked>
                        <label class="form-check-label" for="control-panel-types-is-active">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="control-panel-types-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="control-panel-types-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete hosting panel <strong id="control-panel-types-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone. Servers using this panel must be reassigned first.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="control-panel-types-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
