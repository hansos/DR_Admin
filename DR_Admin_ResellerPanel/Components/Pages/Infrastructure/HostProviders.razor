@page "/infrastructure/host-providers"

<div id="host-providers-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-cloud-fill"></i> Hosting Providers</h2>
            <p class="text-muted mb-0">Manage hosting provider definitions (AWS, Azure, Hetzner, etc.)</p>
        </div>
        <button class="btn btn-primary" id="host-providers-create" type="button">
            <i class="bi bi-plus-circle"></i> New Hosting Provider
        </button>
    </div>

    <div id="host-providers-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="host-providers-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-cloud"></i> Hosting Providers</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Display Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="host-providers-table-body">
                        <tr>
                            <td colspan="6" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="host-providers-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="host-providers-modal-title">New Hosting Provider</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="host-providers-form" novalidate>
                    <div class="mb-3">
                        <label for="host-providers-name" class="form-label">Internal Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="host-providers-name" placeholder="e.g. aws, azure, hetzner">
                        <div class="form-text">Lowercase identifier used internally.</div>
                    </div>
                    <div class="mb-3">
                        <label for="host-providers-display-name" class="form-label">Display Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="host-providers-display-name" placeholder="e.g. AWS, Azure, Hetzner">
                    </div>
                    <div class="mb-3">
                        <label for="host-providers-description" class="form-label">Description</label>
                        <textarea class="form-control" id="host-providers-description" rows="2"></textarea>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="host-providers-is-active" checked>
                        <label class="form-check-label" for="host-providers-is-active">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="host-providers-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="host-providers-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete hosting provider <strong id="host-providers-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone. Servers using this provider must be reassigned first.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="host-providers-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
