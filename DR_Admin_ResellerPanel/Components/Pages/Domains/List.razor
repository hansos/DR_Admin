@page "/domains/list"

<div id="domains-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-globe2"></i> Domains</h2>
            <p class="text-muted mb-0">Manage registered domains.</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <button class="btn btn-primary" id="domains-create" type="button">
                <i class="bi bi-plus-circle"></i> New Domain
            </button>
            <button class="btn btn-outline-primary" id="domains-import" type="button">
                <i class="bi bi-cloud-download"></i> Import
            </button>
        </div>
    </div>

    <div id="domains-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="domains-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-2 ms-auto">
                    <label class="form-label mb-1" for="domains-page-size">Page size</label>
                    <select class="form-select" id="domains-page-size">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Domain</th>
                            <th>Customer</th>
                            <th>Registrar</th>
                            <th>Status</th>
                            <th>Registered</th>
                            <th>Expires</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="domains-table-body">
                        <tr>
                            <td colspan="8" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div class="text-muted small" id="domains-pagination-info"></div>
                <div id="pagingControls" class="mt-3">
                    <nav aria-label="Domains pagination">
                        <ul class="pagination justify-content-center mb-0" id="pagingControlsList"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="domains-import-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Import Domains</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Merge all domains from the selected registrar into Registered Domains.</p>
                <div class="mb-3">
                    <label for="domains-import-registrar" class="form-label">Registrar <span class="text-danger">*</span></label>
                    <select class="form-select" id="domains-import-registrar">
                        <option value="">Select registrar</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="domains-import-confirm">
                    <i class="bi bi-cloud-download"></i> Import
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="domains-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="domains-modal-title">New Domain</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info d-none" id="domains-edit-info"></div>
                <form id="domains-form" novalidate>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label for="domains-name" class="form-label">Domain Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="domains-name" placeholder="example.com" />
                        </div>
                        <div class="col-12 col-md-3">
                            <label for="domains-status" class="form-label">Status</label>
                            <input type="text" class="form-control" id="domains-status" placeholder="Active" />
                        </div>
                        <div class="col-12 col-md-3">
                            <label for="domains-provider-id" class="form-label">Registrar ID <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="domains-provider-id" min="1" />
                        </div>

                        <div class="col-12 col-md-4">
                            <label for="domains-customer-id" class="form-label">Customer ID <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="domains-customer-id" min="1" />
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="domains-service-id" class="form-label">Service ID <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="domains-service-id" min="1" />
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="domains-registration-date" class="form-label">Registration Date <span class="text-danger">*</span></label>
                            <input type="datetime-local" class="form-control" id="domains-registration-date" />
                        </div>

                        <div class="col-12 col-md-4">
                            <label for="domains-expiration-date" class="form-label">Expiration Date <span class="text-danger">*</span></label>
                            <input type="datetime-local" class="form-control" id="domains-expiration-date" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="domains-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="domains-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete domain <strong id="domains-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="domains-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
