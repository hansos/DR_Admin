@page "/customers/list"

<div id="customers-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-people-fill"></i> Customers</h2>
            <p class="text-muted mb-0">Manage customers.</p>
        </div>
        <button class="btn btn-primary" id="customers-create" type="button">
            <i class="bi bi-plus-circle"></i> New Customer
        </button>
    </div>

    <div id="customers-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="customers-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-2 ms-auto">
                    <label class="form-label mb-1" for="customers-page-size">Page size</label>
                    <select class="form-select" id="customers-page-size">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Reference</th>
                            <th>Customer</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Active</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="customers-table-body">
                        <tr>
                            <td colspan="9" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div class="text-muted small" id="customers-pagination-info"></div>
                <div id="pagingControls" class="mt-3">
                    <nav aria-label="Customers pagination">
                        <ul class="pagination justify-content-center mb-0" id="pagingControlsList"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="customers-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="customers-modal-title">New Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info d-none" id="customers-edit-info"></div>
                <form id="customers-form" novalidate>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label for="customers-name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="customers-name" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="customers-customer-name" class="form-label">Customer Name</label>
                            <input type="text" class="form-control" id="customers-customer-name" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="customers-email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="customers-email" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="customers-billing-email" class="form-label">Billing Email</label>
                            <input type="email" class="form-control" id="customers-billing-email" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="customers-phone" class="form-label">Phone <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="customers-phone" />
                        </div>
                        <div class="col-12 col-md-3">
                            <label for="customers-tax-id" class="form-label">Tax ID</label>
                            <input type="text" class="form-control" id="customers-tax-id" />
                        </div>
                        <div class="col-12 col-md-3">
                            <label for="customers-vat-number" class="form-label">VAT Number</label>
                            <input type="text" class="form-control" id="customers-vat-number" />
                        </div>

                        <div class="col-12 col-md-4">
                            <label for="customers-status" class="form-label">Status</label>
                            <input type="text" class="form-control" id="customers-status" placeholder="Active" />
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="customers-preferred-currency" class="form-label">Preferred Currency</label>
                            <input type="text" class="form-control" id="customers-preferred-currency" placeholder="EUR" />
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="customers-credit-limit" class="form-label">Credit Limit</label>
                            <input type="number" class="form-control" id="customers-credit-limit" step="0.01" min="0" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="customers-preferred-payment-method" class="form-label">Preferred Payment Method</label>
                            <input type="text" class="form-control" id="customers-preferred-payment-method" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="customers-notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="customers-notes" rows="2"></textarea>
                        </div>

                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="customers-is-company">
                                    <label class="form-check-label" for="customers-is-company">Company</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="customers-is-active" checked>
                                    <label class="form-check-label" for="customers-is-active">Active</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="customers-allow-currency-override" checked>
                                    <label class="form-check-label" for="customers-allow-currency-override">Allow Currency Override</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="customers-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="customers-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete customer <strong id="customers-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="customers-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
