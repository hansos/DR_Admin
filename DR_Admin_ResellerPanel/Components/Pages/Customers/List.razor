@page "/customers/list"

<div id="customers-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-people-fill"></i> Customers</h2>
            <p class="text-muted mb-0">Manage customers.</p>
        </div>
        <button class="btn btn-primary" id="customers-create" type="button">
            <i class="bi bi-plus-circle"></i> New Customer
        </button>
    </div>

    <div id="customers-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="customers-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-2 ms-auto">
                    <label class="form-label mb-1" for="customers-page-size">Page size</label>
                    <select class="form-select" id="customers-page-size">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Reference</th>
                            <th>Customer</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Active</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="customers-table-body">
                        <tr>
                            <td colspan="9" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div class="text-muted small" id="customers-pagination-info"></div>
                <div id="pagingControls" class="mt-3">
                    <nav aria-label="Customers pagination">
                        <ul class="pagination justify-content-center mb-0" id="pagingControlsList"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="customers-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete customer <strong id="customers-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="customers-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>

<CustomerModal />
