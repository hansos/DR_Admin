@page "/customers/contact-persons"

<div id="contact-persons-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-person-lines-fill"></i> Contact Persons</h2>
            <p class="text-muted mb-0">Manage customer contact persons.</p>
        </div>
        <button class="btn btn-primary" id="contact-persons-create" type="button">
            <i class="bi bi-plus-circle"></i> New Contact Person
        </button>
    </div>

    <div id="contact-persons-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="contact-persons-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-2 ms-auto">
                    <label class="form-label mb-1" for="contact-persons-page-size">Page size</label>
                    <select class="form-select" id="contact-persons-page-size">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Customer</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Position</th>
                            <th>Primary</th>
                            <th>Active</th>
                            <th>Defaults</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="contact-persons-table-body">
                        <tr>
                            <td colspan="10" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div class="text-muted small" id="contact-persons-pagination-info"></div>
                <div id="pagingControls" class="mt-3">
                    <nav aria-label="Contact persons pagination">
                        <ul class="pagination justify-content-center mb-0" id="pagingControlsList"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="contact-persons-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contact-persons-modal-title">New Contact Person</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info d-none" id="contact-persons-edit-info"></div>
                <form id="contact-persons-form" novalidate>
                    <div class="row g-3">
                        <div class="col-12 col-md-4">
                            <label for="contact-persons-first-name" class="form-label">First Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="contact-persons-first-name" />
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="contact-persons-last-name" class="form-label">Last Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="contact-persons-last-name" />
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="contact-persons-customer" class="form-label">Customer</label>
                            <select class="form-select" id="contact-persons-customer">
                                <option value="">Unassigned</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="contact-persons-email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="contact-persons-email" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="contact-persons-phone" class="form-label">Phone <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="contact-persons-phone" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="contact-persons-position" class="form-label">Position</label>
                            <input type="text" class="form-control" id="contact-persons-position" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="contact-persons-department" class="form-label">Department</label>
                            <input type="text" class="form-control" id="contact-persons-department" />
                        </div>

                        <div class="col-12">
                            <label for="contact-persons-notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="contact-persons-notes" rows="2"></textarea>
                        </div>

                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="contact-persons-is-primary">
                                    <label class="form-check-label" for="contact-persons-is-primary">Primary</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="contact-persons-is-active" checked>
                                    <label class="form-check-label" for="contact-persons-is-active">Active</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="contact-persons-default-owner">
                                    <label class="form-check-label" for="contact-persons-default-owner">Default Owner</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="contact-persons-default-billing">
                                    <label class="form-check-label" for="contact-persons-default-billing">Default Billing</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="contact-persons-default-tech">
                                    <label class="form-check-label" for="contact-persons-default-tech">Default Tech</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="contact-persons-default-admin">
                                    <label class="form-check-label" for="contact-persons-default-admin">Default Admin</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="contact-persons-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="contact-persons-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete contact person <strong id="contact-persons-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="contact-persons-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
