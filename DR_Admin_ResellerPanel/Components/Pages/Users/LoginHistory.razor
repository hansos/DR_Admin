@page "/user/login-history"

<div id="login-histories-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-clock-history"></i> Login History</h2>
            <p class="text-muted mb-0">Review login attempts.</p>
        </div>
    </div>

    <div id="login-histories-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="login-histories-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-2">
                    <label class="form-label mb-1" for="login-histories-filter-userid">User ID</label>
                    <input class="form-control" id="login-histories-filter-userid" type="number" min="0" placeholder="Any" />
                </div>
                <div class="col-12 col-md-2">
                    <label class="form-label mb-1" for="login-histories-filter-success">Result</label>
                    <select class="form-select" id="login-histories-filter-success">
                        <option value="">Any</option>
                        <option value="true">Successful</option>
                        <option value="false">Failed</option>
                    </select>
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label mb-1" for="login-histories-filter-from">From</label>
                    <input class="form-control" id="login-histories-filter-from" type="datetime-local" />
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label mb-1" for="login-histories-filter-to">To</label>
                    <input class="form-control" id="login-histories-filter-to" type="datetime-local" />
                </div>
                <div class="col-12 col-md-2">
                    <label class="form-label mb-1" for="login-histories-page-size">Page size</label>
                    <select class="form-select" id="login-histories-page-size">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div class="col-12 d-flex gap-2 justify-content-end">
                    <button class="btn btn-outline-primary" id="login-histories-apply" type="button"><i class="bi bi-funnel"></i> Apply</button>
                    <button class="btn btn-outline-secondary" id="login-histories-reset" type="button"><i class="bi bi-x-circle"></i> Reset</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Identifier</th>
                            <th>Result</th>
                            <th>Attempted</th>
                            <th>IP</th>
                            <th>Failure</th>
                        </tr>
                    </thead>
                    <tbody id="login-histories-table-body">
                        <tr>
                            <td colspan="7" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div class="text-muted small" id="login-histories-pagination-info"></div>
                <div id="pagingControls" class="mt-3">
                    <nav aria-label="Login history pagination">
                        <ul class="pagination justify-content-center mb-0" id="pagingControlsList"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
