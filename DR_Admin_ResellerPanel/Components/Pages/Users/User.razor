@page "/user/users"

<div id="users-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-person-badge-fill"></i> Users</h2>
            <p class="text-muted mb-0">Manage reseller panel user accounts.</p>
        </div>
        <button class="btn btn-primary" id="users-create" type="button">
            <i class="bi bi-plus-circle"></i> New User
        </button>
    </div>

    <div id="users-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="users-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-people"></i> Users</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role(s)</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="users-table-body">
                        <tr>
                            <td colspan="7" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="users-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="users-modal-title">New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="users-form" novalidate>
                    <div class="mb-3">
                        <label for="users-username" class="form-label">Username <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="users-username" placeholder="e.g. jdoe" autocomplete="off" />
                    </div>
                    <div class="mb-3">
                        <label for="users-email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="users-email" placeholder="user@example.com" autocomplete="off" />
                    </div>
                    <div class="mb-3" id="users-password-group">
                        <label for="users-password" class="form-label">Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="users-password" placeholder="Initial password" autocomplete="new-password" />
                        <div class="form-text">Only required when creating a new user.</div>
                    </div>
                    <div class="mb-3">
                        <label for="users-role" class="form-label">Role</label>
                        <input type="text" class="form-control" id="users-role" placeholder="e.g. Admin" />
                        <div class="form-text">Primary role name (optional).</div>
                    </div>
                    <div class="mb-3">
                        <label for="users-customer-id" class="form-label">Customer ID</label>
                        <input type="number" class="form-control" id="users-customer-id" min="0" />
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="users-is-active" checked>
                        <label class="form-check-label" for="users-is-active">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="users-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="users-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete user <strong id="users-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="users-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="users-roles-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="users-roles-modal-title">Manage Roles</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="users-roles-alert-error" class="alert alert-danger d-none" role="alert"></div>
                <div class="mb-2 text-muted small">Select one or more roles for this user.</div>
                <div id="users-roles-list" class="vstack gap-2"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="users-roles-save">
                    <i class="bi bi-check-lg"></i> Save Roles
                </button>
            </div>
        </div>
    </div>
</div>
