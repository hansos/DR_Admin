@page "/users/roles"

<div id="roles-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-shield-lock-fill"></i> Roles</h2>
            <p class="text-muted mb-0">Manage user roles and permission groups.</p>
        </div>
        <button class="btn btn-primary" id="roles-create" type="button">
            <i class="bi bi-plus-circle"></i> New Role
        </button>
    </div>

    <div id="roles-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="roles-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-shield"></i> Roles</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="roles-table-body">
                        <tr>
                            <td colspan="6" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="roles-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roles-modal-title">New Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="roles-form" novalidate>
                    <div class="mb-3">
                        <label for="roles-code" class="form-label">Code <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="roles-code" placeholder="e.g. ADMIN, SUPPORT" autocomplete="off" />
                        <div class="form-text">Short identifier used internally.</div>
                    </div>
                    <div class="mb-3">
                        <label for="roles-name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="roles-name" placeholder="e.g. Administrator" autocomplete="off" />
                    </div>
                    <div class="mb-3">
                        <label for="roles-description" class="form-label">Description</label>
                        <textarea class="form-control" id="roles-description" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="roles-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="roles-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete role <strong id="roles-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="roles-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
