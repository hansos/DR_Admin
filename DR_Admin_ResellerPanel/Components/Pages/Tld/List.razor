@page "/tld/list"

<div id="tlds-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-building"></i> Active TLDs</h2>
            <p class="text-muted mb-0">Manage active top-level domains available for registrations.</p>
        </div>
        <button class="btn btn-primary" id="tlds-create" type="button">
            <i class="bi bi-plus-circle"></i> Add New
        </button>
    </div>

    <div id="tlds-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="tlds-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-4">
                    <label class="form-label mb-1" for="tlds-filter-registrar">Registrar filter (optional)</label>
                    <select class="form-select" id="tlds-filter-registrar">
                        <option value="">All registrars</option>
                    </select>
                </div>
                <div class="col-12 col-md-2">
                    <label class="form-label mb-1" for="tlds-page-size">Page size</label>
                    <select class="form-select" id="tlds-page-size">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div class="col-12 col-md-6 d-flex justify-content-md-end">
                    <button class="btn btn-outline-primary" id="tlds-refresh" type="button">
                        <i class="bi bi-arrow-repeat"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Extension</th>
                            <th>Description</th>
                            <th>Default Years</th>
                            <th>Max Years</th>
                            <th>Privacy</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tlds-table-body">
                        <tr>
                            <td colspan="7" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div class="text-muted small" id="tlds-pagination-info"></div>
                <div id="tlds-paging-controls" class="mt-3">
                    <nav aria-label="TLD pagination">
                        <ul class="pagination justify-content-center mb-0" id="tlds-paging-controls-list"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="tlds-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tlds-modal-title">Add TLD</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="tlds-form" novalidate>
                    <div class="mb-3">
                        <label for="tlds-extension" class="form-label">Extension <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="tlds-extension" placeholder="e.g. com, net, org" maxlength="63" />
                    </div>
                    <div class="mb-3">
                        <label for="tlds-description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="tlds-description" placeholder="Optional description" maxlength="255" />
                    </div>
                    <div class="row g-2 mb-3">
                        <div class="col-md-6">
                            <label for="tlds-default-years" class="form-label">Default registration years</label>
                            <input type="number" class="form-control" id="tlds-default-years" min="1" max="100" />
                        </div>
                        <div class="col-md-6">
                            <label for="tlds-max-years" class="form-label">Max registration years</label>
                            <input type="number" class="form-control" id="tlds-max-years" min="1" max="100" />
                        </div>
                    </div>
                    <div class="form-check form-switch mb-2" id="tlds-is-second-level-container">
                        <input class="form-check-input" type="checkbox" id="tlds-is-second-level" />
                        <label class="form-check-label" for="tlds-is-second-level">Second-level TLD</label>
                    </div>
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" id="tlds-requires-privacy" />
                        <label class="form-check-label" for="tlds-requires-privacy">Requires privacy protection</label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="tlds-is-active" checked>
                        <label class="form-check-label" for="tlds-is-active">Active</label>
                    </div>
                    <div class="mt-3">
                        <label for="tlds-registrars" class="form-label">Registrars</label>
                        <select id="tlds-registrars" class="form-select" multiple size="6"></select>
                        <div class="form-text">Optional: select one or more registrars to assign this TLD to.</div>
                    </div>
                    <div class="mt-3">
                        <label for="tlds-notes" class="form-label">Notes</label>
                        <textarea class="form-control" id="tlds-notes" rows="2" maxlength="500"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="tlds-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="tlds-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Soft-delete TLD <strong id="tlds-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This will deactivate the TLD for future use.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="tlds-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
