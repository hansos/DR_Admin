@page "/dashboard/expiring-domains"

<div id="expiring-domains-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-clock"></i> Expiring Domains</h2>
            <p class="text-muted mb-0">Review domains by upcoming expiration.</p>
        </div>
    </div>

    <div id="expiring-domains-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="row g-3">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Expiring in the next 7 days</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Domain</th>
                                    <th>Customer</th>
                                    <th>Registrar</th>
                                    <th>Expires</th>
                                </tr>
                            </thead>
                            <tbody id="expiring-domains-7-body">
                                <tr>
                                    <td colspan="4" class="text-center">
                                        <div class="spinner-border text-primary"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Expiring in 7-30 days</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Domain</th>
                                    <th>Customer</th>
                                    <th>Registrar</th>
                                    <th>Expires</th>
                                </tr>
                            </thead>
                            <tbody id="expiring-domains-30-body">
                                <tr>
                                    <td colspan="4" class="text-center">
                                        <div class="spinner-border text-primary"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Expired domains</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Domain</th>
                                    <th>Customer</th>
                                    <th>Registrar</th>
                                    <th>Expired</th>
                                </tr>
                            </thead>
                            <tbody id="expiring-domains-expired-body">
                                <tr>
                                    <td colspan="4" class="text-center">
                                        <div class="spinner-border text-primary"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
