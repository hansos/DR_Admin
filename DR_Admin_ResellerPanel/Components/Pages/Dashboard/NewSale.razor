@page "/dashboard/new-sale"

<div id="dashboard-new-sale-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-bag-plus"></i> New sale</h2>
            <p class="text-muted mb-0">Start a new domain sale workflow.</p>
        </div>

<CustomerModal />
    </div>

    <div id="new-sale-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="new-sale-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light d-flex flex-wrap justify-content-between align-items-center gap-2">
            <h5 class="mb-0"><i class="bi bi-search"></i> Check domain availability</h5>
            <button class="btn btn-outline-secondary btn-sm" id="new-sale-settings-open" type="button">
                <i class="bi bi-gear"></i> Settings
            </button>
        </div>
        <div class="card-body">
            <div class="text-muted small mb-3">
                Registrar: <span class="fw-semibold" id="new-sale-registrar-display">Loading...</span>
            </div>
            <form id="new-sale-search-form">
                <div class="row g-3 align-items-end">
                    <div class="col-12 col-lg-9">
                        <label class="form-label" for="new-sale-domain-name">Domain name</label>
                        <input class="form-control" id="new-sale-domain-name" type="text" placeholder="example.com" />
                    </div>
                    <div class="col-12 col-lg-3">
                        <button class="btn btn-primary w-100" type="submit">
                            <i class="bi bi-search"></i> Check availability
                        </button>
                    </div>
                </div>
            </form>
            <div id="new-sale-search-result" class="mt-3"></div>
        </div>
    </div>

    <div class="card shadow-sm mb-4 d-none" id="new-sale-customer-card">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-people"></i> Select customer</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="text-muted small">Selected domain</div>
                <div class="fw-semibold" id="new-sale-selected-domain">-</div>
            </div>

            <div class="row g-3 align-items-end">
                <div class="col-12 col-lg-9">
                    <label class="form-label" for="new-sale-customer-search">Search customer</label>
                    <input class="form-control" id="new-sale-customer-search" type="text"
                           placeholder="Name, contact, phone, email, reg. number or customer number" autocomplete="off" />
                    <div class="form-text">Type at least 2 characters to search.</div>
                </div>
                <div class="col-12 col-lg-3">
                    <button class="btn btn-outline-primary w-100" type="button" id="new-sale-create-customer">
                        <i class="bi bi-person-plus"></i> Create customer
                    </button>
                </div>
            </div>

            <div id="new-sale-customer-search-status" class="mt-2"></div>

            <div id="new-sale-customer-detail" class="card mt-3 d-none">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <h6 class="card-title mb-2" id="new-sale-customer-detail-name"></h6>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="new-sale-customer-clear" title="Clear selection">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                    <div class="row g-2 small">
                        <div class="col-12 col-md-6"><strong>Contact:</strong> <span id="new-sale-customer-detail-contact"></span></div>
                        <div class="col-12 col-md-6"><strong>Email:</strong> <span id="new-sale-customer-detail-email"></span></div>
                        <div class="col-12 col-md-6"><strong>Phone:</strong> <span id="new-sale-customer-detail-phone"></span></div>
                        <div class="col-12 col-md-6"><strong>Ref:</strong> <span id="new-sale-customer-detail-ref"></span></div>
                        <div class="col-12 col-md-6"><strong>Customer #:</strong> <span id="new-sale-customer-detail-custno"></span></div>
                        <div class="col-12 col-md-6"><strong>Status:</strong> <span id="new-sale-customer-detail-status"></span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="new-sale-customer-select-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-people"></i> Select customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted small">Multiple customers matched your search. Select one to continue.</p>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Ref #</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody id="new-sale-customer-select-body"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="new-sale-settings-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New sale settings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="new-sale-settings-registrar">Default registrar</label>
                    <select class="form-select" id="new-sale-settings-registrar">
                        <option value="">Loading registrars...</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="new-sale-settings-save">Save</button>
            </div>
        </div>
    </div>
</div>
