@page "/dashboard/new-sale"

<div id="dashboard-new-sale-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-bag-plus"></i> New sale</h2>
            <p class="text-muted mb-0">Start a new domain sale workflow.</p>
        </div>
    </div>

    <div id="new-sale-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="new-sale-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light d-flex flex-wrap justify-content-between align-items-center gap-2">
            <h5 class="mb-0"><i class="bi bi-search"></i> Check domain availability</h5>
            <button class="btn btn-outline-secondary btn-sm" id="new-sale-settings-open" type="button">
                <i class="bi bi-gear"></i> Settings
            </button>
        </div>
        <div class="card-body">
            <div class="text-muted small mb-3">
                Registrar: <span class="fw-semibold" id="new-sale-registrar-display">Loading...</span>
            </div>
            <form id="new-sale-search-form">
                <div class="row g-3 align-items-end">
                    <div class="col-12 col-lg-9">
                        <label class="form-label" for="new-sale-domain-name">Domain name</label>
                        <input class="form-control" id="new-sale-domain-name" type="text" placeholder="example.com" />
                    </div>
                    <div class="col-12 col-lg-3">
                        <button class="btn btn-primary w-100" type="submit">
                            <i class="bi bi-search"></i> Check availability
                        </button>
                    </div>
                </div>
            </form>
            <div id="new-sale-search-result" class="mt-3"></div>
        </div>
    </div>

    <div class="card shadow-sm mb-4 d-none" id="new-sale-customer-card">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-people"></i> Select customer</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="text-muted small">Selected domain</div>
                <div class="fw-semibold" id="new-sale-selected-domain">-</div>
            </div>

            <div class="row g-3">
                <div class="col-12 col-lg-6">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="new-sale-customer-option" id="new-sale-customer-existing" value="existing" checked />
                        <label class="form-check-label" for="new-sale-customer-existing">Use existing customer</label>
                    </div>
                    <div class="mt-2" id="new-sale-existing-customer">
                        <label class="form-label" for="new-sale-customer-select">Customer</label>
                        <select class="form-select" id="new-sale-customer-select">
                            <option value="">Loading customers...</option>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="new-sale-customer-option" id="new-sale-customer-new" value="new" />
                        <label class="form-check-label" for="new-sale-customer-new">Register a new customer</label>
                    </div>
                    <div class="mt-2 d-none" id="new-sale-new-customer">
                        <p class="text-muted small mb-2">Create a customer record before finishing the domain sale.</p>
                        <a class="btn btn-outline-primary" href="customers/list">
                            <i class="bi bi-person-plus"></i> Create customer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="new-sale-settings-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New sale settings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="new-sale-settings-registrar">Default registrar</label>
                    <select class="form-select" id="new-sale-settings-registrar">
                        <option value="">Loading registrars...</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="new-sale-settings-save">Save</button>
            </div>
        </div>
    </div>
</div>
