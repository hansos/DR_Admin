@page "/dashboard/new-sale/services"

<div id="dashboard-new-sale-services-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-puzzle"></i> New sale</h2>
            <p class="text-muted mb-0">Page 4 of 7: Add other services.</p>
        </div>
    </div>

    <div id="new-sale-services-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="new-sale-services-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Sale context</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-md-3">
                    <div class="text-muted small">Domain</div>
                    <div class="fw-semibold" id="new-sale-services-domain">-</div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="text-muted small">Flow type</div>
                    <div class="fw-semibold" id="new-sale-services-flow">-</div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="text-muted small">Customer</div>
                    <div class="fw-semibold" id="new-sale-services-customer">-</div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="text-muted small">Hosting</div>
                    <div class="fw-semibold" id="new-sale-services-hosting">-</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4" id="new-sale-services-transfer-card">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-key"></i> Transfer authorisation</h5>
        </div>
        <div class="card-body">
            <label class="form-label" for="new-sale-services-epp-code">EPP / auth code</label>
            <input class="form-control" id="new-sale-services-epp-code" type="text" placeholder="Enter transfer authorisation code" autocomplete="off" />
            <div class="form-text">Required when flow type is transfer.</div>
        </div>
    </div>

    <div class="card shadow-sm mb-4" id="new-sale-services-register-card">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Domain registration settings</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-lg-4">
                    <label class="form-label" for="new-sale-services-registration-period">Registration period</label>
                    <select class="form-select" id="new-sale-services-registration-period">
                        <option value="1">1 year</option>
                        <option value="2">2 years</option>
                        <option value="3">3 years</option>
                        <option value="4">4 years</option>
                        <option value="5">5 years</option>
                        <option value="6">6 years</option>
                        <option value="7">7 years</option>
                        <option value="8">8 years</option>
                        <option value="9">9 years</option>
                        <option value="10">10 years</option>
                    </select>
                </div>
                <div class="col-12 col-lg-4 d-flex align-items-end">
                    <div class="form-check mb-2">
                        <input class="form-check-input" id="new-sale-services-auto-renew" type="checkbox" checked />
                        <label class="form-check-label" for="new-sale-services-auto-renew">Auto renew</label>
                    </div>
                </div>
                <div class="col-12 col-lg-4 d-flex align-items-end">
                    <div class="form-check mb-2">
                        <input class="form-check-input" id="new-sale-services-privacy" type="checkbox" />
                        <label class="form-check-label" for="new-sale-services-privacy">Privacy protection (WHOIS guard)</label>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <div class="small text-muted">Estimated domain operation price</div>
                <div class="fw-semibold" id="new-sale-services-domain-price">-</div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light d-flex flex-wrap justify-content-between align-items-center gap-2">
            <h5 class="mb-0"><i class="bi bi-tools"></i> Custom services</h5>
            <span class="badge text-bg-secondary" id="new-sale-services-selected-count">0 selected</span>
        </div>
        <div class="card-body">
            <div id="new-sale-services-status" class="mb-3 text-muted small"></div>
            <div id="new-sale-services-groups" class="row g-3">
                <div class="col-12 text-center text-muted">Loading custom services...</div>
            </div>
            <div class="mt-3">
                <label class="form-label" for="new-sale-services-custom-note">Custom service notes</label>
                <textarea class="form-control" id="new-sale-services-custom-note" rows="2" placeholder="Consulting, migration assistance, or customer-specific notes"></textarea>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> Domain contacts</h5>
        </div>
        <div class="card-body" id="new-sale-services-contacts-summary">
            <div class="text-muted">Loading contact details...</div>
        </div>
    </div>

    <div class="d-flex justify-content-between gap-2 mb-4">
        <a class="btn btn-outline-secondary" href="/dashboard/new-sale/hosting"><i class="bi bi-arrow-left"></i> Back</a>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" id="new-sale-services-skip" type="button">Skip add-ons</button>
            <button class="btn btn-primary" id="new-sale-services-next" type="button">
                Continue to Page 5 <i class="bi bi-arrow-right"></i>
            </button>
        </div>
    </div>
</div>
