@page "/dashboard"

<div id="dashboard-summary-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-speedometer2"></i> Dashboard summary</h2>
            <p class="text-muted mb-0">Overview of ongoing sales flow, DNS synchronization and key billing status.</p>
        </div>
    </div>

    <div id="dashboard-summary-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div id="dashboard-summary-workflow-card" class="card shadow-sm mb-4 d-none">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Ongoing new sale workflow</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <div class="text-muted small">Domain</div>
                    <div class="fw-semibold" id="dashboard-summary-workflow-domain">-</div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="text-muted small">Customer</div>
                    <div class="fw-semibold" id="dashboard-summary-workflow-customer">-</div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="text-muted small">Offer status</div>
                    <div class="fw-semibold" id="dashboard-summary-workflow-status">Draft</div>
                </div>
            </div>
        </div>
    </div>

    <div id="dashboard-summary-pending-card" class="card shadow-sm mb-4 d-none">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Pending DNS sync</h5>
            <div id="dashboard-summary-pending-loading" class="spinner-border spinner-border-sm text-secondary d-none" role="status" aria-hidden="true"></div>
        </div>
        <div class="card-body">
            <div id="dashboard-summary-pending-note" class="text-muted small mb-3">Loading pending DNS synchronization status...</div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Domain</th>
                            <th class="text-end">Pending records</th>
                        </tr>
                    </thead>
                    <tbody id="dashboard-summary-pending-table"></tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12 col-xl-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Offers</h5>
                    <span class="badge text-bg-secondary" id="dashboard-summary-offers-count">0</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Quote</th>
                                    <th>Status</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody id="dashboard-summary-offers-body">
                                <tr><td colspan="3" class="text-center text-muted">Loading offers...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-bag-check"></i> Orders</h5>
                    <span class="badge text-bg-secondary" id="dashboard-summary-orders-count">0</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Order</th>
                                    <th>Status</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody id="dashboard-summary-orders-body">
                                <tr><td colspan="3" class="text-center text-muted">Loading orders...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Open invoices</h5>
                    <span class="badge text-bg-secondary" id="dashboard-summary-open-invoices-count">0</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Invoice</th>
                                    <th>Status</th>
                                    <th class="text-end">Amount due</th>
                                </tr>
                            </thead>
                            <tbody id="dashboard-summary-open-invoices-body">
                                <tr><td colspan="3" class="text-center text-muted">Loading open invoices...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="dashboard-summary-all-clear-card" class="alert alert-success d-none" role="alert">
        <i class="bi bi-check-circle"></i> All clear. No pending DNS sync records and no ongoing new sale workflow in this session.
    </div>
</div>
