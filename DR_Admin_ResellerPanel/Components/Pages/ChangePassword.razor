@page "/my-account/change-password"
@layout EmptyLayout

<PageTitle>Reset Password - DR Admin</PageTitle>

<div class="login-page">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-sm-10 col-md-7 col-lg-4">
                <div class="card shadow login-card">
                    <div class="card-body p-4">

                        <div class="text-center mb-4">
                            <div class="login-brand-icon">
                                <i class="bi bi-shield-lock-fill"></i>
                            </div>
                            <h4 class="mt-2 mb-0">Reset Password</h4>
                            <p class="text-muted small mb-0">Enter your new password</p>
                        </div>

                        <div id="reset-password-alert-success" class="alert alert-success d-none" role="alert"></div>
                        <div id="reset-password-alert-error" class="alert alert-danger d-none" role="alert"></div>

                        <form id="reset-password-form" novalidate>
                            <div class="mb-3">
                                <label for="reset-password-new" class="form-label">New Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="reset-password-new"
                                           placeholder="Enter your new password"
                                           autocomplete="new-password" required />
                                    <button class="btn btn-outline-secondary" type="button"
                                            id="toggle-reset-password-new" tabindex="-1"
                                            title="Toggle password visibility">
                                        <i class="bi bi-eye" id="toggle-reset-password-new-icon"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="reset-password-confirm" class="form-label">Confirm Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="reset-password-confirm"
                                           placeholder="Confirm your new password"
                                           autocomplete="new-password" required />
                                    <button class="btn btn-outline-secondary" type="button"
                                            id="toggle-reset-password-confirm" tabindex="-1"
                                            title="Toggle password visibility">
                                        <i class="bi bi-eye" id="toggle-reset-password-confirm-icon"></i>
                                    </button>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100" id="reset-password-submit">
                                <i class="bi bi-check-lg"></i> Reset Password
                            </button>
                        </form>

                        <div class="text-center mt-3">
                            <a href="login" class="text-decoration-none small">
                                <i class="bi bi-arrow-left"></i> Back to Sign In
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
