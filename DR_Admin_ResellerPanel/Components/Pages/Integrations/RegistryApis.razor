@page "/integrations/registry-apis"

<div id="registrars-page" class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="h4 mb-1"><i class="bi bi-puzzle"></i> Registry APIs</h2>
            <p class="text-muted mb-0">Manage registrar integrations and defaults.</p>
        </div>
        <button class="btn btn-primary" id="registrars-create" type="button">
            <i class="bi bi-plus-circle"></i> New Registrar
        </button>
    </div>

    <div id="registrars-alert-success" class="alert alert-success d-none" role="alert"></div>
    <div id="registrars-alert-error" class="alert alert-danger d-none" role="alert"></div>

    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-2 ms-auto">
                    <label class="form-label mb-1" for="registrars-page-size">Page size</label>
                    <select class="form-select" id="registrars-page-size">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Code</th>
                            <th>Contact</th>
                            <th>Website</th>
                            <th>Active</th>
                            <th>Default</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="registrars-table-body">
                        <tr>
                            <td colspan="8" class="text-center">
                                <div class="spinner-border text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div class="text-muted small" id="registrars-pagination-info"></div>
                <div id="pagingControls" class="mt-3">
                    <nav aria-label="Registrars pagination">
                        <ul class="pagination justify-content-center mb-0" id="pagingControlsList"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="registrars-edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registrars-modal-title">New Registrar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="registrars-form" novalidate>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label for="registrars-name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="registrars-name" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="registrars-code" class="form-label">Code <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="registrars-code" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="registrars-contact-email" class="form-label">Contact Email</label>
                            <input type="email" class="form-control" id="registrars-contact-email" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="registrars-contact-phone" class="form-label">Contact Phone</label>
                            <input type="text" class="form-control" id="registrars-contact-phone" />
                        </div>

                        <div class="col-12">
                            <label for="registrars-website" class="form-label">Website</label>
                            <input type="text" class="form-control" id="registrars-website" />
                        </div>

                        <div class="col-12">
                            <label for="registrars-notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="registrars-notes" rows="2"></textarea>
                        </div>

                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="registrars-is-active" checked>
                                    <label class="form-check-label" for="registrars-is-active">Active</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="registrars-is-default">
                                    <label class="form-check-label" for="registrars-is-default">Default Registrar</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="registrars-save">
                    <i class="bi bi-check-lg"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="registrars-delete-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Delete registrar <strong id="registrars-delete-name"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="registrars-confirm-delete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
