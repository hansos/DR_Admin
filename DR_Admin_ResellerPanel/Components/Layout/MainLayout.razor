@inherits LayoutComponentBase
@inject NavigationManager Nav

    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <a id="top-row-new-sale" href="/dashboard/new-sale" class="btn btn-link" style="display:none">
                    <i class="bi bi-plus-circle"></i>&nbsp;New Sale
                </a>
                <span id="top-row-userinfo" class="user-info" style="display:none">
                    <i class="bi bi-person-circle"></i>&nbsp;
                    <span id="top-row-username"></span>
                </span>
                <a id="top-row-login" href="/login" class="btn btn-link" style="display:none">
                <i class="bi bi-box-arrow-in-right"></i>&nbsp;Sign In
                </a>
                <button id="top-row-logout" class="btn btn-link btn-signout" onclick="window.Auth?.logout()" style="display:none">
                <i class="bi bi-box-arrow-right"></i>&nbsp;Sign Out
                </button>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>

    <div id="blazor-error-ui" data-nosnippet>
        An unhandled error has occurred.
        <a href="." class="reload">Reload</a>
        <span class="dismiss">🗙</span>
    </div>

